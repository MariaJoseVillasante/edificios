<h1 class="d-flex justify-content-evenly">Departamento</h1>
<div class="container mt-5 d-flex justify-content-evenly">
  <div class="card tabla" style="width: 25rem;"> 
    <div class="card-body">
      <h5 class="card-title">Edificio: <%= @departamento.numero %></h5>
      <h6 class="card-subtitle mb-2 text-muted">ID: <%= @departamento.id %></h6>
      <p class="card-text">Id Edificio: <%= @departamento.edificio.id %></p>
      <p class="card-text">Nombre Edificio: <%=@departamento.edificio.nombre%></p>
      <p class="card-text">Renta: <%= number_with_delimiter(@departamento.rent, :delimiter => '.')%></p>
      <p class="card-text">Nombre Cliente: <%=@departamento.cliente.nombre%> <%=@departamento.cliente.apellido%></p>
      <div class="d-flex justify-content-evenly">
          <%= link_to 'Lista', departamentos_path, class:"btn btn-secondary" %>
          <%= link_to "Editar", edit_departamento_path(@departamento), class:"btn btn-secondary"%>
          <%= link_to 'Nuevo', new_departamento_path, class:"btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
